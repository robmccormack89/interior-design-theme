<header id="SiteHeader">
  <div id="HeaderTop" class="uk-background-muted">
      <div class="uk-container uk-text-center uk-text-small uk-text-uppercase uk-text-bold">
          
          {% if sidebar_header_top %}
            {{sidebar_header_top}}
          {% else %}
            No Content. Add a custom UIKIT HTML Widget to the Header Top Widget Area.
          {% endif %}
          
      </div>
  </div>
  <div id="HeaderMain" class="uk-background-default uk-container uk-container-expand theme-border-top theme-border-bottom" uk-sticky>
    <nav class="uk-navbar-transparent" uk-navbar>
      
      <div class="uk-navbar-left nav-logo-area">
        {% if theme_logo_url %}
        <a class="uk-logo" title="{{ site.title }}" href="{{ site.url }}"><img data-src="{{ theme_logo_url }}" uk-img></a>
        {% else %}
        <a class="uk-navbar-item uk-logo uk-padding-remove uk-text-emphasis" title="{{ site.title }}" href="{{ site.url }}">{{ site.title }}</a>
        {% endif %}
      </div>
      
      <div class="uk-navbar-right nav-search-styles-area">
        <ul id="MainMenuNav" class="uk-navbar-nav uk-visible@m">
          {% if has_menu_main %}
            {% for item in menu_main.get_items %}
              {% if item.get_children %}
                <li class="{{ item.classes | join(' ') }}"><a href="{{ item.link }}">{{ item.title }}<span uk-icon="icon: triangle-down; ratio: 0.8"></span></a>
                  <div class="uk-navbar-dropdown ">
                    <ul class="uk-nav uk-navbar-dropdown-nav">
                      {% for child in item.get_children %}
                      <li><a href="{{ child.get_link }}">{{ child.title }}</a>
                        {% if child.children %}
                          <ul class="uk-nav-sub">
                            {% for third in child.children %}
                              <li>
                                <a href="{{ third.get_link }}">{{ third.title }}</a>
                              </li>
                            {% endfor %}
                          </ul>
                        {% endif %}
                      </li>
                      {% endfor %}
                    </ul>
                  </div>
                </li>
              {% else %}
                <li class="{{ item.classes | join(' ') }}"><a href="{{ item.get_link }}">{{ item.title }}</a></li>
              {% endif %}
            {% endfor %}
          {% else %}
            <li>Add a menu to the Main Menu slot in Appearance > Menus.</li>
          {% endif %}
        </ul>
        <div class="uk-visible@m">
          <a class="uk-navbar-toggle" href="#modal-navbar-search" uk-toggle title="Open the Search Box"><span uk-icon="icon: search; ratio: 0.8"></span></a>
        </div>
        <ul class="uk-navbar-nav uk-hidden@m">
          <li>
            <a class="uk-navbar-toggle" uk-navbar-toggle-icon uk-toggle href="#offcanvas-mobile-nav" title="Open the Mobile Menu"><span class="uk-hidden">Menu</span></a>

          </li>
        </ul>
      </div>
    
    </nav>
  </div>
</header>
<!-- /header section -->