{% if posts.pagination.pages is not empty %}
    <nav class="pagination-block uk-padding pagi">
        <ul class="uk-pagination uk-flex-center">

            {# Previous #}
            {% if posts.pagination.prev %}
                <li class="">
                    <a href="{{ posts.pagination.prev.link }}" class="prev"><i uk-icon="icon: chevron-left"></i> Previous</a>
                </li>
            {% endif %}

            {# Pages #}
            {% for page in posts.pagination.pages %}
                {% if page.link %}
                    <li>
                        <a href="{{ page.link }}" class="{{ page.class }}">{{ page.title }}</a>
                    </li>
                {% else %}
                    <li class="current">
                        <span class="{{ page.class }}">{{ page.title }}</span>
                    </li>
                {% endif %}
            {% endfor %}

            {# Next #}
            {% if posts.pagination.next %}
                <li class="">
                    <a href="{{ posts.pagination.next.link }}" class="next">Next <i uk-icon="icon: chevron-right"></i></a>
                </li>
            {% endif %}

        </ul>
    </nav>
{% endif %}

<div class="scroll-loaders">
  <div class="page-load-status">
    <div class="loader-ellips infinite-scroll-request">
      <span class="loader-ellips__dot"></span>
      <span class="loader-ellips__dot"></span>
      <span class="loader-ellips__dot"></span>
      <span class="loader-ellips__dot"></span>
    </div>
    <p class="infinite-scroll-last">End of posts</p>
    <p class="infinite-scroll-error">No more posts to load</p>
  </div>
  
  <p>
    <a class="view-more-button uk-flex uk-flex-middle uk-flex-center uk-animation-toggle" tabindex="0">Load More <span class="slider-link-icon uk-margin-small-left uk-animation-slide-left-small" uk-icon="more"></span></a>
  </p>
</div>
<script>
  var infScroll = new InfiniteScroll( '.archive-posts', {
    path: '.next',
    append: '.item',
    button: '.view-more-button',
    // using button, disable loading on scroll 
    scrollThreshold: false,
    status: '.page-load-status',
    hideNav: '.pagi'
  });
</script>